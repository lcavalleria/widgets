; Use the script network_monitor.py to get text and icon


(deflisten networkName 
	:initial "Initializing" 
	`python ./scripts/network_monitor.py text`
)
(deflisten networkIcon 
	:initial "îˆ†"
	`python ./scripts/network_monitor.py icon`
)

(defwidget network []
	(box	
		:class "network"
		(box
			:space-evenly false
			:spacing 10
			:halign "center"
			(label
				:limit-width 1
				:text {networkIcon}
			)
			(label
				:limit-width 15
				:text {networkName}
			)
		)
	)
)
