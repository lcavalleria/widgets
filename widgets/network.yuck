; use NetworkManager dispatcher scripts:
; /usr/lib/NetworkManager/dispatcher.d/99-user-scripts
; scripts/network_update.sh

(defvar networkName "")
(defvar networkDevice "")

(defwidget network []
	(box	:class "network"
		:orientation "h"
		:space-evenly false
		:spacing 10
		:halign "center"
		{networkDevice == "wlan0" ? '' : networkDevice == "eth0" || networkDevice == "eth1" ? '' : '⚠'}
		{networkName ?: "Checking..."}
	)
)
