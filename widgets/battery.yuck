(defwidget battery []
	(box	
		:width 80
		:orientation "h"
		:halign "end"
		:spacing 5
		:space-evenly false
		(progress	
			:value {EWW_BATTERY.BAT0.capacity}
			:class "battery"
			:width 80
			:valign "center"
			:flipped true
			:orientation "h"
		)
		(label	:width 20
			:text "${EWW_BATTERY.BAT0.status == "Charging" ? 'ﮣ' : ''}"
		)
	)
)

