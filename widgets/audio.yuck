; use the script ../scripts/audio.sh

(deflisten volume :initial "0" "./scripts/audio.sh volume")
(deflisten muted :initial false "./scripts/audio.sh muted")

(defwidget audio []
	(box	
		:width 60
		:style {muted ? 'muted':''}
		:orientation "h"
		:halign "end"
		:spacing 5
		:space-evenly false
		(progress	
			:class "volume"
			:value {volume}
			:width 60
			:valign "center"
			:orientation "h"
		)
	)
)

