; use the script ../scripts/audio.sh

(defvar volume "0")
(defvar muted "false")

(defwidget audio []
	(box	
		:width 60
		:orientation "h"
		:halign "end"
		:spacing 5
		:space-evenly false
		(progress	
			:class "${muted == "true" ? 'muted' : 'volume'}"
			:value {volume}
			:width 60
			:valign "center"
			:orientation "h"
		)
	)
)

